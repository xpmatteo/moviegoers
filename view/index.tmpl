<!DOCTYPE html>
<!--suppress HtmlUnknownTarget -->
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MovieGoers</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="container">
    <div class="sidebar">
      <h2>Genres</h2>
      <form id="genreForm">
        <label><input type="radio" name="genre" value="all" checked> All</label><br>
        <label><input type="radio" name="genre" value="action"> Action</label><br>
        <label><input type="radio" name="genre" value="comedy"> Comedy</label><br>
        <label><input type="radio" name="genre" value="thriller"> Thriller</label><br>
        <!-- Add more genres as needed -->
        <input type="submit" name="submit" value="Choose">
      </form>
    </div>
    <div class="main">
      <h1>Movies</h1>
      <div class="grid-container" id="movieGrid">
        {{ range .movies }}
        <div class="movie">
          <img src="https://image.tmdb.org/t/p/w185/{{.PosterPath}}" alt="Movie poster">
          <h3>{{.Title}}</h3>
          <p class="overview">{{.Overview}}</p>
        </div>
        {{ end }}
      </div>
      <a href="#">More movies...</a>
    </div>
  </div>
</body>
</html>
